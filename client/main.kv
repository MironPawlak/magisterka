

<RootWidget>:
    # test: test_input

    MDTabs:
        id: main_panel
        do_default_tab: False
        
        Tab:
            title: 'Live game'
            Label:
                id: champion_select_label
                text: "No active champion select"
                # on_press: app.update_champion_select()
            GridLayout:
                id: champion_select_layout
                opacity: 0
                cols: 2
                BoxLayout:
                    orientation: 'vertical'
                    Label:
                        text: "Champion Select"
                        font_size: '40dp'
                        height: 100
                        size_hint_y: None
                    GridLayout:
                        cols: 2
                        spacing: (10, 10)
                        Label:
                            text: "Ally team"
                            font_size: '20dp'

                        Label:
                            text: "Enemy team"
                            font_size: '20dp'

                        ChampionImage:
                            id: ally_0
                        ChampionImage:
                            id: enemy_0
                        ChampionImage:
                            id: ally_1
                        ChampionImage:
                            id: enemy_1
                        ChampionImage:
                            id: ally_2
                        ChampionImage:
                            id: enemy_2
                        ChampionImage:
                            id: ally_3
                        ChampionImage:
                            id: enemy_3
                        ChampionImage:
                            id: ally_4
                        ChampionImage:
                            id: enemy_4
                BoxLayout:
                    orientation: 'vertical'
#                    position_hint: {'center_x':0.5, 'center_y':0.5}
                    Label:
                        text: "Bans:"
                        font_size: '40dp'
                        height: 100
                        size_hint_y: None
                    GridLayout:

                        id: bans
                        pos: self.pos
                        cols: 5
                        row_default_height: 70
                        row_force_default: True
                        height: 150
                        size_hint_y: None

                    Label:
                        text: "Suggested Picks:"
                        font_size: '40dp'
                        height: 100
                        size_hint_y: None
                    BoxLayout:
                        orientation: 'vertical'
                        id: suggestions


        
        Tab:
            title: 'Statistics'
            id: statistics_panel

            MDTabs:
                id: tabs
                on_tab_switch: app.on_tab_switch(*args)
                Tab:
                    id: all_tab
                    title: "All"
                Tab:
                    title: "Top"

                Tab:
                    title: "Jungle"

                Tab:
                    title: "Mid"

                Tab:
                    title: "Adc"

                Tab:
                    title: "Support"

        
        Tab:
            title: 'Settings'
            id: settings_content

    TooltipMDIconButton:
        icon: app.icon
        tooltip_text: "Connection to League client status. Click to refresh"
        on_press: app.league_process_setup()
        pos_hint: {"center_x": .96, "center_y": .97}
