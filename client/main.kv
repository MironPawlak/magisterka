

<RootWidget>:

    MDTabs:
        id: main_panel
        do_default_tab: False
        lock_swiping: True
        __safe_id: [drop_select.__self__]

        Tab:
            title: 'Live game'
            Label:
                id: champion_select_label
                text: "No active champion select"
            GridLayout:
                id: champion_select_layout
                opacity: 0
                cols: 2
                BoxLayout:
                    orientation: 'vertical'
                    Label:
                        text: "Champion Select"
                        font_size: '40dp'
                        height: 100
                        size_hint_y: None
                    GridLayout:
                        cols: 2
                        spacing: (10, 10)
                        Label:
                            text: "Ally team"
                            font_size: '20dp'

                        Label:
                            text: "Enemy team"
                            font_size: '20dp'

                        ChampionImage:
                            id: ally_0
                        ChampionImage:
                            id: enemy_0
                        ChampionImage:
                            id: ally_1
                        ChampionImage:
                            id: enemy_1
                        ChampionImage:
                            id: ally_2
                        ChampionImage:
                            id: enemy_2
                        ChampionImage:
                            id: ally_3
                        ChampionImage:
                            id: enemy_3
                        ChampionImage:
                            id: ally_4
                        ChampionImage:
                            id: enemy_4
                BoxLayout:
                    orientation: 'vertical'
                    Label:
                        text: "Bans:"
                        font_size: '40dp'
                        height: 100
                        size_hint_y: None
                    GridLayout:
                        id: bans
                        pos: self.pos
                        cols: 5
                        row_default_height: 40
                        row_force_default: True
                        height: 120
                        size_hint_y: None
                    Button:
                        height: 30
                        size_hint_x: 0.5
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                        id: drop_btn
                        text: 'Select your role'
                        size_hint_y: None
                        on_parent: drop_select.dismiss()
                        on_release: drop_select.open(self)

                    DropDown:
                        id: drop_select
                        on_select: drop_btn.text = '{}'.format(args[1])

                        Button:
                            id: units_num_btn_1
                            text: 'Top'
                            size_hint_y: None
                            height: 35
                            on_release: drop_select.select('Top')

                        Button:
                            id: units_num_btn_1
                            text: 'Jungle'
                            size_hint_y: None
                            height: 35
                            on_release: drop_select.select('Jungle')

                        Button:
                            id: units_num_btn_2
                            text: 'Middle'
                            size_hint_y: None
                            height: 35
                            on_release: drop_select.select('Middle')

                        Button:
                            id: units_num_btn_3
                            text: 'Bottom'
                            size_hint_y: None
                            height: 35
                            on_release: drop_select.select('Bottom')

                        Button:
                            id: units_num_btn_4
                            text: 'Support'
                            size_hint_y: None
                            height: 35
                            on_release: drop_select.select('Support')
                    Label:
                        text: "Suggested Picks:"
                        font_size: '40dp'
                        height: 100
                        size_hint_y: None
                    BoxLayout:
                        orientation: 'vertical'
                        id: suggestions


        
        Tab:
            title: 'Statistics'
            id: statistics_panel

            MDTabs:
                id: tabs
                on_tab_switch: app.on_tab_switch(*args)
                lock_swiping: True
                Tab:
                    id: top_tab
                    title: "Top"

                Tab:
                    title: "Jungle"

                Tab:
                    title: "Mid"

                Tab:
                    title: "Adc"

                Tab:
                    title: "Support"


        Tab:
            title: 'Counters'
            RelativeLayout:
                BoxLayout:
                    pos_hint: {"x": .55, "y": .92}
                    size_hint_y: 0.04
                    size_hint_x: 0.4
                    Label:
                        text: "Type champion to get counters"
                    TextInput:
                        text: ""
                        id: counter_input
                        multiline: False
                    MDIconButton:
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                        icon: 'magnify'
                        on_press: app.load_counters()
                BoxLayout:
                    pos_hint: {"x": 0, "y": 0}
                    size_hint_y: 0.9
                    id: counter_stats


        Tab:
            title: 'Settings'
            id: settings_content

    TooltipMDIconButton:
        icon: app.icon
        tooltip_text: "Connection to League client status. Click to refresh"
        on_press: app.league_process_setup()
        pos_hint: {"center_x": .96, "center_y": .97}
